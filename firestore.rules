rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // CWE-862: Missing Authorization - Enforce user-scoped access to weight entries
    // Only authenticated users can read/write their own weight entries
    match /users/{userId}/weight_entries/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CWE-862: Missing Authorization - Enforce user-scoped access to user documents (goals, preferences)
    // Only authenticated users can read/write their own user profile and goals
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CWE-862: Missing Authorization - Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}